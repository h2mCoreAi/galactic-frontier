{
  "game_name": "Galactic Frontier",
  "description": "Space shooter game with Phaser.js frontend and Node.js backend - Mono-repo with single-player focus",
  "version": "0.1.0",
  "purpose": "File of truth showing all resources and configurations used by Galactic Frontier",

  "resources_in_use": {
    "ports": {
      "backend_api": 3001,
      "frontend_dev": 5174,
      "database": 5433
    },

    "database": {
      "name": "galactic_frontier",
      "schema": "public",
      "connection_string": "postgresql://galactic_frontier:galactic_frontier@localhost:5433/galactic_frontier",
      "host": "localhost",
      "port": 5433,
      "username": "galactic_frontier",
      "password": "galactic_frontier"
    },

    "environment_variables": {
      "DATABASE_URL": "postgresql://galactic_frontier:galactic_frontier@localhost:5433/galactic_frontier",
      "JWT_SECRET": "galactic_frontier_jwt_secret_key_for_development_only_change_in_production",
      "JWT_REFRESH_SECRET": "galactic_frontier_refresh_secret_key_for_development_only_change_in_production",
      "DISCORD_CLIENT_ID": "placeholder",
      "DISCORD_CLIENT_SECRET": "placeholder",
      "NODE_ENV": "development",
      "PORT": "3001",
      "FRONTEND_PORT": "5174",
      "BCRYPT_ROUNDS": "12",
      "JWT_EXPIRES_IN": "15m",
      "JWT_REFRESH_EXPIRES_IN": "7d",
      "ACCOUNT_LOCKOUT_DURATION_MS": "1800000",
      "RATE_LIMIT_WINDOW_MS": "900000",
      "RATE_LIMIT_MAX_REQUESTS": "100",
      "FRONTEND_URL": "http://localhost:5174",
      "CORS_ORIGIN": "http://localhost:5174"
    },

    "file_paths": {
      "project_root": "/srv/galactic-frontier",
      "backend_source": "/srv/galactic-frontier/single-player/src",
      "frontend_source": "/srv/galactic-frontier/single-player/src",
      "game_config": "/srv/galactic-frontier/config",
      "database_schema": "/srv/galactic-frontier/shared/migrations",
      "logs": "/srv/galactic-frontier/logs",
      "backups": "/srv/galactic-frontier/backups",
      "ecosystem_config": "/srv/galactic-frontier/ecosystem.config.js",
      "assets": "/srv/galactic-frontier/assets",
      "core": "/srv/galactic-frontier/core",
      "shared": "/srv/galactic-frontier/shared",
      "utils": "/srv/galactic-frontier/utils",
      "tests": "/srv/galactic-frontier/tests"
    },

    "pm2_processes": {
      "backend": "gf.backend",
      "frontend": "gf.frontend"
    },

    "log_files": {
      "backend_out": "/srv/galactic-frontier/logs/backend-out.log",
      "backend_error": "/srv/galactic-frontier/logs/backend-error.log",
      "frontend_out": "/srv/galactic-frontier/logs/frontend-out.log",
      "frontend_error": "/srv/galactic-frontier/logs/frontend-error.log"
    },

    "network_endpoints": {
      "backend_base": "http://localhost:3001",
      "frontend_base": "http://localhost:5174",
      "api_base": "http://localhost:3001/api",
      "websocket_base": "ws://localhost:3001",
      "health_check": "http://localhost:3001/health"
    },

    "api_routes_used": [
      "/api/auth/*",
      "/api/profile",
      "/api/highscores",
      "/api/config.json",
      "/health"
    ],

    "cors_origins": [
      "http://localhost:5174",
      "http://127.0.0.1:5174"
    ],

    "database_tables": [
      "users",
      "profiles",
      "sp_highscores",
      "sp_sessions"
    ],

    "npm_packages_in_use": [
      "express",
      "phaser",
      "pg",
      "dotenv",
      "passport",
      "passport-discord",
      "vite",
      "cors",
      "helmet",
      "express-rate-limit",
      "bcrypt",
      "jsonwebtoken",
      "socket.io",
      "socket.io-client",
      "winston",
      "jest",
      "supertest",
      "typescript",
      "@types/node",
      "@types/express",
      "@types/cors",
      "ts-node",
      "ts-jest"
    ],

    "external_services": {
      "postgresql_version": "17+",
      "node_version": ">=18.0.0",
      "pm2_version": "installed globally",
      "email_service": "console (development)"
    },

    "game_mechanics": {
      "game_type": "single_player_shooter",
      "framework": "Phaser.js 3.60.0",
      "physics": "Arcade Physics",
      "canvas_size": "800x600",
      "controls": {
        "movement": "W (thrust)",
        "rotation": "mouse",
        "shooting": "right mouse button",
        "afterburner": "spacebar"
      },
      "enemies": ["small", "medium", "large"],
      "powerups": ["health", "fanShot"],
      "scoring_system": "points per enemy destroyed",
      "level_progression": "score-based (250 points per level)",
      "health_system": "damage on collision/projectiles",
      "afterburner_system": "limited resource with regeneration"
    },

    "security_settings": {
      "cors_policy": "restrictive (specific origins only)",
      "helmet_middleware": true,
      "rate_limiting": {
        "enabled": true,
        "windowMs": 900000,
        "max": 100
      },
      "authentication": "Discord OAuth (placeholder for dev)",
      "session_management": "JWT tokens",
      "password_hashing": "bcrypt (rounds: 12)"
    },

    "development_settings": {
      "testing_framework": "Jest",
      "linter": "ESLint with airbnb-typescript",
      "type_checker": "TypeScript strict mode",
      "hot_reload": "Vite HMR enabled",
      "log_level": "debug (development)",
      "git_branches": ["main", "dev"],
      "package_manager": "npm"
    }
  },

  "conflict_prevention_notes": {
    "description": "To avoid conflicts with Galactic Frontier, DO NOT use:",
    "ports": [3001, 5174, 5433],
    "database_names": ["galactic_frontier"],
    "environment_variable_prefixes": ["JWT_", "BCRYPT_", "RATE_LIMIT_", "ACCOUNT_LOCKOUT_", "DISCORD_"],
    "pm2_process_names": ["gf.backend", "gf.frontend"],
    "log_file_paths": ["/srv/galactic-frontier/logs/*"],
    "api_route_patterns": ["/api/auth/*", "/api/profile", "/api/highscores", "/api/config.json"],
    "websocket_namespaces": ["/"]
  },

  "last_updated": "2025-10-23",
  "contact": "Check memory graph for detailed system information"
}
